    let livroAtual = "G√™nesis";
let capituloAtual = 1;

// Dados da B√≠blia (exemplo com G√™nesis 1 e 2)
const biblia = {
  "G√™nesis": [
    {
      "capitulo": 1,
      "versiculos": [
        "No princ√≠pio criou Deus os c√©us e a terra.",
        "E a terra era sem forma e vazia; e as trevas estavam sobre a face do abismo, e o Esp√≠rito de Deus se movia sobre a face das √°guas.",
        "E disse Deus: Haja luz; e houve luz.",
        "E viu Deus que era boa a luz; e fez separa√ß√£o entre a luz e as trevas.",
        "E chamou Deus √† luz Dia, e √†s trevas chamou Noite. E foi a tarde e a manh√£, o dia primeiro."
      ]
    },
    {
      "capitulo": 2,
      "versiculos": [
        "Assim foram conclu√≠dos os c√©us e a terra, e todo o seu ex√©rcito.",
        "E havia Deus terminado no dia s√©timo a sua obra, que fizera; e descansou no dia s√©timo de toda a sua obra, que tinha feito.",
        "E aben√ßoou Deus o dia s√©timo, e o santificou; porque nele descansou de toda a sua obra, que Deus criara e fizera."
      ]
    }
  ]
};

function carregarCapitulo(livro, cap) {
  livroAtual = livro;
  capituloAtual = cap;

  const capitulo = biblia[livro]?.find(c => c.capitulo === cap);
  if (!capitulo) {
    document.getElementById("titulo").textContent = "Cap√≠tulo n√£o encontrado";
    return;
  }

  document.getElementById("titulo").textContent = `${livro} ${cap}`;

  const versiculosDiv = document.getElementById("versiculos");
  versiculosDiv.innerHTML = "";

  capitulo.versiculos.forEach((texto, i) => {
    const p = document.createElement("p");
    p.innerHTML = `<strong>${i+1}</strong> ${texto}`;

    const btn = document.createElement("button");
    btn.textContent = "‚≠ê";
    btn.onclick = () => favoritar(livro, cap, i+1, texto);
    p.appendChild(btn);

    versiculosDiv.appendChild(p);
  });
}

function favoritar(livro, cap, vers, texto) {
  const favs = JSON.parse(localStorage.getItem("favoritos") || "[]");
  const existe = favs.find(f => f.livro === livro && f.cap === cap && f.vers === vers);
  if (!existe) {
    favs.push({ livro, cap, vers, texto });
    localStorage.setItem("favoritos", JSON.stringify(favs));
    alert(`Vers√≠culo salvo: ${livro} ${cap}:${vers}`);
  } else {
    alert("J√° est√° nos favoritos!");
  }
}

function listarFavoritos() {
  const favs = JSON.parse(localStorage.getItem("favoritos") || "[]");
  const div = document.getElementById("favoritos");
  if (favs.length === 0) {
    div.innerHTML = "<p>Nenhum vers√≠culo favorito ainda.</p>";
    return;
  }

  favs.forEach(f => {
    const p = document.createElement("p");
    p.innerHTML = `<strong>${f.livro} ${f.cap}:${f.vers}</strong><br>${f.texto}`;
    div.appendChild(p);
  });
}

function proximo() {
  capituloAtual++;
  carregarCapitulo(livroAtual, capituloAtual);
}

function anterior() {
  if (capituloAtual > 1) {
    capituloAtual--;
    carregarCapitulo(livroAtual, capituloAtual);
  }
}

function buscar() {
  const termo = document.getElementById("buscaInput").value.toLowerCase();
  const resultadosDiv = document.getElementById("resultados");
  resultadosDiv.innerHTML = "<p>Buscando...</p>";

  let encontrados = [];

  for (const livro in biblia) {
    biblia[livro].forEach(capitulo => {
      capitulo.versiculos.forEach((v, i) => {
        if (v.toLowerCase().includes(termo)) {
          encontrados.push(`<strong>${livro} ${capitulo.capitulo}:${i+1}</strong> ‚Äî ${v}`);
        }
      });
    });
  }

  resultadosDiv.innerHTML = "";
  if (encontrados.length === 0) {
    resultadosDiv.innerHTML = "<p>Nenhum resultado encontrado.</p>";
  } else {
    encontrados.forEach(res => {
      const p = document.createElement("p");
      p.innerHTML = res;
      resultadosDiv.appendChild(p);
    });
  }
}
